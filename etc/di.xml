<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Faonni\Bitcoin\Model\Import\Config">
        <arguments>
            <argument name="config" xsi:type="array">
                <item name="blockchain" xsi:type="array">
                    <item name="label" xsi:type="string">Blockchain.info</item>
                    <item name="class" xsi:type="string">Faonni\Bitcoin\Model\Import\Blockchain</item>
                </item>
                <item name="bitcoincharts" xsi:type="array">
                    <item name="label" xsi:type="string">Bitcoincharts.com</item>
                    <item name="class" xsi:type="string">Faonni\Bitcoin\Model\Import\Bitcoincharts</item>
                </item>				
            </argument>
        </arguments>
    </type>
    <type name="Magento\Config\Model\Config\TypePool">
        <arguments>
            <argument name="sensitive" xsi:type="array">
                <item name="payment/vladfilimon_m2bitcoinpayment/user" xsi:type="string">1</item>
                <item name="payment/vladfilimon_m2bitcoinpayment/password" xsi:type="string">1</item>
            </argument>
        </arguments>
    </type>
</config>
